@page
@model BookListRazor.Pages.BookList.EditModel

<br />

<h2 class="text-info">Edit Book</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="BookEdit.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="BookEdit.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="BookEdit.Name" class="form-control" />
            </div>
            <span asp-validation-for="BookEdit.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="BookEdit.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="BookEdit.Author" class="form-control" />
            </div>
            <span asp-validation-for="BookEdit.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="BookEdit.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="BookEdit.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="BookEdit.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}


